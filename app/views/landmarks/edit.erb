<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><label for="landmark_name">Landmark Name: </label>
    <input type="text" id="name" name="landmark[name]"
    value="<%= @landmark.name %>"></p>
  <p><label for="landmark_year_completed">Year Completed: </label>
    <input type="text" id="year_completed" name="landmark[year_completed]"
    value="<%= @landmark.year_completed %>"></p>
  <p><input type="submit" value="Edit Landmark"></p>
</form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
